{
    "functions": {
        "source": "functions"
    },
    "hosting": {
        "public": "frontend",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "/api/**",
                "function": "api"
            }
        ]
    },
    "emulators": {
        "functions": {
            "port": 5001
        },
        "hosting": {
            "port": 5000
        },
        "ui": {
            "enabled": true,
            "port": 4000
        }
    }
}